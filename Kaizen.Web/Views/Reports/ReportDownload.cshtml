@model Kaizen.Models.ReportModel.KaizenReportModel
@{
    Layout = "SidebarLayout";
}

<!-- jQuery UI CSS -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<style>
    .table thead th {
        border-bottom-width: 1px;
        text-transform: uppercase;
        font-size: 11px;
        font-family: sans-serif;
        font-weight: 600;
        letter-spacing: 0.5px;
        line-height: 3;
        background-color: #EEEEEE !important;
    }

    table {
        display: table;
        border-collapse: separate;
        box-sizing: border-box;
        text-indent: initial;
        unicode-bidi: isolate;
        border-spacing: 3px;
        border-color: gray;
    }

    .dow {
        color: black !important;
    }

    .datesbro:focus {
        box-shadow: none;
        border-color: #ced4da;
    }

    .countback {
        background: #efefef;
        line-height: 1.5;
        border-radius: 3px;
        padding: 2px 7px;
        border: 1px solid transparent;
    }

    .reporthed{
    margin-bottom: 0;
    margin-top: 0;
    color: #1d7dbe;
    font-size: 1.25rem !important;
    }
</style>
<div class="container-fluid">
    <div class="container-fluid rounded bg-white p-2  mt-2 mb-2">
        <div class="col-lg-12 p-md-0 p-2">
            <div class="welcome-text">
                <h4 class="text-primary reporthed">Report</h4>
                <p>Kaizen Form > Report Downloads</p>
            </div>
        </div>
    </div>

    @* <div class="card p-3 mt-5 ">
        <div class="col-lg-12">
                <div class="col-lg-4">
                    <h5 class="text-primary">Report List :</h5>
                </div>
      </div>
           </div>  *@


        <div class="card">
            <div class="card-body">
            <div class="col-lg-12 mb-2">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12"> <h5 class="text-primary">Report List :</h5> </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label for="startDate">Start Date</label>
                        <div class="input-group">
                            <input id="startDate" class="form-control text-primary bg-light datesbro" type="text" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text" onclick="$('#startDate').datepicker('show');">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <label for="endDate">End Date</label>
                        <div class="input-group">
                            <input id="endDate" class="form-control text-primary bg-light datesbro" type="text" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text" onclick="$('#endDate').datepicker('show');">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
                <div class="table-responsive-sm mt-2">
                    <table class="table table-bordered  tablerefresh" broder="">
                        <thead>
                            <tr class="tablesort">
                                <th class="text-center">#</th>
                                <th class="text-center">UTILITIES</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center">#</td>
                            <td><p><b>Kaizen Form</b><span class="float-right">Total Rows : <span class="countback">@ViewBag.KaizenCount</span></span></p></td>
                            
                                <td class="text-center">
                                    <input type="button" value="Download" class="btn btn-warning dow" onclick="changeOrderExportHref()" />
                                </td>
                            </tr>
                            <tr>
                             <td class="text-center">#</td>
                            <td><p><b>Block</b><span class="float-right">Total Rows : <span class="countback">@ViewBag.BlockCount</span></span></p></td>
                            <td class="text-center">
                                <input type="button" value="Download" class="btn btn-warning dow" onclick="changeBlockExportHref()" />
                            </td>
                            </tr>
                        <tr>
                            <td class="text-center">#</td>
                            <td><p><b>Domain</b><span class="float-right">Total Rows : <span class="countback">@ViewBag.DomainCount</span></span></p></td>
                            <td class="text-center">
                                <input type="button" value="Download" class="btn btn-warning dow" onclick="changeDomainExportHref()" />
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">#</td>
                            <td><p><b>Department</b><span class="float-right">Total Rows : <span class="countback">@ViewBag.DepartmentCount</span></span></p></td>
                            <td class="text-center">
                                <input type="button" value="Download" class="btn btn-warning dow" onclick="changeDepartmentExportHref()" />
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<script>
    $(function () {
        var today = new Date();

        $("#startDate").datepicker({
            dateFormat: "yy-mm-dd",
            maxDate: today,
            beforeShowDay: function (date) {
                return [date <= today, ''];
            },
            // onSelect: function (selectedDate) {
            //     $("#endDate").datepicker("option", "minDate", selectedDate);
            // }
        });

        $("#endDate").datepicker({
            dateFormat: "yy-mm-dd",
            maxDate: today,
            beforeShowDay: function (date) {
                return [date <= today, ''];
            }
        });

    });
    
    function changeOrderExportHref() {
        var url = '@Url.Action("KaizenForm", "Reports")';
        var StartDate = document.getElementById("startDate").value;
        var EndDate = document.getElementById("endDate").value;
        window.location.href = url + "/?StartDate=" + StartDate + "&EndDate= " + EndDate;
    }
    function changeBlockExportHref() {
        var url = '@Url.Action("BlockForm", "Reports")';
        var StartDate = document.getElementById("startDate").value;
        var EndDate = document.getElementById("endDate").value;
        window.location.href = url + "/?StartDate=" + StartDate + "&EndDate= " + EndDate;
    }
    function changeDomainExportHref() {
        var url = '@Url.Action("DomainForm", "Reports")';
        var StartDate = document.getElementById("startDate").value;
        var EndDate = document.getElementById("endDate").value;
        window.location.href = url + "/?StartDate=" + StartDate + "&EndDate= " + EndDate;
    }
    function changeDepartmentExportHref() {
        var url = '@Url.Action("DepartmentForm", "Reports")';
        var StartDate = document.getElementById("startDate").value;
        var EndDate = document.getElementById("endDate").value;
        window.location.href = url + "/?StartDate=" + StartDate + "&EndDate= " + EndDate;
    }
</script>




