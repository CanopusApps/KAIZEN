@{
    Layout = "SidebarLayout";
}
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<style>
    .text-Azure {
        color: #2dc3e8;
        font-size: 25px !important;
    }

    .no-margin {
        margin-right: 0;
        margin-left: 0;
    }
    .viewuserCardBody {
        border: 1px solid #ebeef6;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        background-color: white;
        padding: 10px;
    }
    .table tbody tr td {
        vertical-align: middle;
        border-color: #d7dae3;
    }

    .table th, .table td {
        border: 1px solid #EEEEEE;
        padding: 5px 10px;
        font-size: 11px;
    }

    table {
        display: table;
        border-collapse: separate;
        box-sizing: border-box;
        text-indent: initial;
        unicode-bidi: isolate;
        border-spacing: 3px;
        border-color: gray;
        border: 2px solid #EEEEEE;
    }
</style>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="~/assets/css/common/datatables.min.css" rel="stylesheet" />
<script src="~/assets/js/custom/datatables.min.js"></script>

<div class="container-fluid p-2">
    <form>
        <div class="container-fluid  border rounded bg-white p-2  mt-2 mb-2">
            <div class="col-lg-12 p-md-0 p-2">

                <div class="welcome-text ">
                    <h4 class="text-Azure">Submitted Kaizen</h4>
                </div>
            </div>
        </div>
    </form>
</div>

