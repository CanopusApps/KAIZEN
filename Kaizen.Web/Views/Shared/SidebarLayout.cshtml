@inject IHttpContextAccessor Accessor

@{
    var title = "Responsive Sidebar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="~/assets/css/common/common.css" rel="stylesheet" />
    <script src="~/assets/js/custom/jquery.min.js"></script>
    <script src="~/assets/js/custom/sweetalert.min.js"></script>
</head>
<style>

    #wc {
        font-size: 15px;
        color: white;
    }
</style>
<body class="bg-light">
    <div id="wrapper" class="d-flex flex-column">
        <!-- Navbar -->
        <nav class="navbar navbar-light " id="container-header">
                <div class="text-center text-uppercase border-bottom text-light pl-5" style="background-color:#2dc3e8!important">
                    <img class="logo" src="~/assets/img/logo-white.png" alt="Tata Logo" />
                    <h4>Tepl Kaizen Idea</h4>
                </div>
              @*   <img src="~/assets/img/favicon.png" width="50px" /> *@
                <ul class="navbar-nav header-right pr-4">
                    <li class="nav-item">
                        <div class="header-info">
                            <div class="d-flex align-items-center">
                                <img src="~/assets/img/favicon.png" width="50px" class="mr-2" />
                                <h3 class="mb-0">
                                    <label id="wc">
                                    Hi,<div id="wc">@Accessor.HttpContext.Session.GetString("Message")</div>
                                    </label>
                                </h3>
                            </div>
                        </div>
                    </li>
                </ul>          
        </nav>
        <div>
        <button class="btn menu-toggle m-3" id="menu-toggle">
            <i class="fas fa-bars"></i>
        </button>
        </div>
        <!-- /Navbar -->
        <div class="d-flex flex-row">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <div class="list-group list-group-flush my-3">
                    <a href="#" class="list-group-item list-group-item-action fw-bold text-light">Dashboard</a>
                    <a href="/CreateKaizen/NewKaizen" class="list-group-item list-group-item-action  fw-bold  text-light">NewKaizen</a>
                    <div class="collapse" id="basicUIElementsSubmenu">
                        <a href="#" class="list-group-item list-group-item-action fw-bold">Element 1</a>
                        <a href="#" class="list-group-item list-group-item-action fw-bold">Element 2</a>
                    </div>
                    <!-- Drop down -->
                    <div class="list-group-item list-group-item-action" data-toggle="collapse" data-target="#demo">Master Page's<span><i class="fa-sharp fa-solid fa-chevron-down p-3"></i></span></div>
                    <div class="sub-menu collapse" id="demo">
                        <a class="list-group-item text-light ml-3" href="/Admin/AddBlock">Block</a>
                        <a class="list-group-item text-light ml-3" href="/Admin/AddDomain">Domain</a>
                        <a class="list-group-item text-light ml-3" href="/Admin/AddDepartment">Department</a>
                        <a class="list-group-item text-light ml-3" href="/Admin/AddUser">User</a>
                        <a class="list-group-item text-light ml-3" href="/ViewUser/ViewUser">View User</a>
                    </div>

                    <a href="#" class="list-group-item list-group-item-action text-light fw-bold">Form Elements</a>
                    <a href="#" class="list-group-item list-group-item-action text-light fw-bold">Tables</a>
                    <a href="#" class="list-group-item list-group-item-action text-light fw-bold">Charts</a>
                    <a href="#" class="list-group-item list-group-item-action text-light fw-bold">Icons</a>
                    <a class="LogoutIcon list-group-item" href="/Login/Logout"><i class="fa-solid fa-right-from-bracket icon1 padding-left-20 margin-left-20"></i></a>
                </div>
            </div>
            <!-- /Sidebar -->
            <!-- Page Content -->
            <div id="page-content-wrapper" class="flex-grow-1">
                @RenderBody()
                <!-- Footer-->
               @*  <div class="footer">
                    <p>Copyright © TEPL-KAIZEN-IDEA 2024</p>
                </div> 
            </div> *@
        </div>
    </div>

    <!-- /#wrapper -->
        <div class="footer bg-white  text-center">
            <div class="container py-3 ">
                <p class="mb-0 ">Copyright © TEPL-KAIZEN-IDEA 2024</p>
            </div>
        </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>