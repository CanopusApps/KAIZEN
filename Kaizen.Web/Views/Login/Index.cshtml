            </div>
        </div>

    </div>

    @if (TempData["loginmsg"] != null)
    {
        <script>
            swal('@TempData["loginmsg"]')
        </script>
    }
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

<script>
    $(window).on('load', function () {
        $.ajax({
            type: "POST",
            url: "/Login/loginImage",
            success: function (response) {
                // Assuming response contains arrays for goldList, silverList, and bronzeList
                let goldList = response.goldList;
                let silverList = response.silverList;
                let bronzeList = response.bronzeList;

                // Update Gold Section
                for (let i = 0; i < goldList.length; i++) {
                    let goldItem = goldList[i];
                    $("#Gname" + (i + 1)).text(goldItem.firstName);
                    if (goldItem.winnerimage) {
                        $("#gimg" + (i + 1)).attr("src", "data:image/jpeg;base64," + goldItem.winnerimage);
                    }
                }

                // Update Silver Section
                for (let i = 0; i < silverList.length; i++) {
                    let silverItem = silverList[i];
                    $("#Sname" + (i + 1)).text(silverItem.firstName);
                    if (silverItem.winnerimage) {
                        $("#simg" + (i + 1)).attr("src", "data:image/jpeg;base64," + silverItem.winnerimage);
                    }
                }

                // Update Bronze Section
                for (let i = 0; i < bronzeList.length; i++) {
                    let bronzeItem = bronzeList[i];
                    $("#Bname" + (i + 1)).text(bronzeItem.firstName);
                    if (bronzeItem.winnerimage) {
                        $("#bimg" + (i + 1)).attr("src", "data:image/jpeg;base64," + bronzeItem.winnerimage);
                    }
                }
            },
            error: function (xhr, status, error) {
                console.error("An error occurred: " + status + " - " + error);
            }
        });
    });


    $(document).ready(function () {
        $("#userForm").on("keydown", function (e) {
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13]) !== -1 ||
                (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                (e.keyCode === 67 && (e.ctrlKey === true || e.metaKey === true)) ||
                (e.keyCode === 88 && (e.ctrlKey === true || e.metaKey === true)) ||
                (e.keyCode >= 35 && e.keyCode <= 39)) {
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
        $.validator.addMethod("exactlength", function (value, element, param) {
            return this.optional(element) || value.length === param;
        }, "Please enter exactly {0} digits.");

        $("#userForm").validate({
            errorClass: "text-danger",
            rules: {
                EmpId: {
                    required: true,
                    digits: true,
                    minlength: 6,
                    maxlength: 8
                },
                Password: {
                    required: true,
                    minlength: 6
                }
            },
            messages: {
                EmpId: {
                    required: "Employee ID is required",
                    digits: "Employee ID must be digits only",
                    minlength: "Employee ID must be a minimum of 6 and maximum of 8 digits only",
                    maxlength: "Employee ID must be a minimum of 6 and maximum of 8 digits only"
                },
                Password: {
                    required: "Password is required",
                    minlength: "Password must be at least 6 characters long"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });

        $("#EmpId, #Password").on('keyup', function () {
            $(this).valid();
        });
    });
</script>
