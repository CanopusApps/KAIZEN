<script>
     $(document).ready(function () {
        
                 
       $('#inputDomain').change(function () {
          var Domain = $('#inputDomain').val().trim();
          $.ajax({
             type: 'GET',
             url: '/Admin/FetchDepartment',
             dataType: "json",
             data: { DomainID: Domain },
             success: function (result) {
                if (result) {
                    var dropdown = $('#inputDepartment');
                    dropdown.empty();
                    dropdown.append($('<option>', {
                        value: '',
                        text: '--Select Department--'
                    }));
                    for (var i = 0; i < result.length; i++) {
                        $('#inputDepartment').append('<option value="' + result[i].deptId + '">' + result[i].departmentName + '</option>');
                    }
                } else {
                    Swal.fire('Please Select Domain');
                }
            },
            error: function (error) {
            }
        });
    });
        $('#btn_filter').click(function () {
      
            var StartDate = $('#dtstartdate').val();
            var EndDate = $('#dtenddate').val();
            var Domain = $('#inputDomain option:selected').text();
            var Block = $('#inputBlock option:selected').text();
            var cadre = $('#inputCadre option:selected').text();
            var Department = $('#inputDepartment option:selected').text();
            $.ajax({
                url: '@Url.Action("ViewFilterKaizen", "Dashboard")',
                type: 'GET',
                data: {
                    StartDate: StartDate,
                    EndDate: EndDate,
                    Domain: Domain,
                    Department: Department,
                    cadre: cadre,
                    Block: Block
                },
                beforeSend: function () {
                    $('#loader-wrapper').show();
                },
                success: function (result) {

                    if (result) {
                        const statusDetails = {
                            Submitted:1,
                            ImageApproved: 2,
                            ImageRejected: 3,
                            DRIApproved: 4,
                            DRIRejected: 5,
                            IEApproved: 6,
                            IERejected: 7,
                            FinanceApproved: 8,
                            FinanceRejected: 9,
                            Pending: 10,
                            DRIPending: 11,
                            IEPending: 12,
                            FinancePending: 13
                        };

                        $('.driApproved').text('0');
                       
                        $('.driRejected').text('0');
                        $('.ieApproved').text('0');
                      
                        $('.ieRejected').text('0');
                        $('.financeApproved').text('0');
                        $('.financeRejected').text('0');
                        $('.driPending').text('0');
                        $('.iePending').text('0');
                        $('.financePending').text('0');
                        $('.imageApproved').text('0');
                      
                        $('.imageRejected').text('0');
                        $('.imagePending').text('0');
                            for (let i = 0; i < result.countKaizenList.length; i++) {
                                let item = result.countKaizenList[i];

                                switch (item.approvalStatus) {
                                    case statusDetails.DRIApproved:
                                    
                                       
                                   
                                        $('.iePending').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.DRIRejected:
                                        $('.driRejected').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.IEApproved:
                                 
                                     
                                    $('.financePending').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.IERejected:
                                        $('.ieRejected').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.FinanceApproved:
                                        $('.financeApproved').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.FinanceRejected:
                                        $('.financeRejected').text(item.approvalCount || 0);
                                        break;
                                    // case statusDetails.DRIPending:
                                    //     $('.driPending').text(item.approvalCount || 0);
                                    //     break;
                                    // case statusDetails.IEPending:
                                    //     $('.iePending').text(item.approvalCount || 0);
                                    //     break;
                                    // case statusDetails.FinancePending:
                                    //     $('.financePending').text(item.approvalCount || 0);
                                    //     break;
                                    // case statusDetails.ImageApproved:
                                    //     $('.driPending').text(item.approvalCount || 0);
                                    //     break;
                                    case statusDetails.ImageRejected:
                                        $('.imageRejected').text(item.approvalCount || 0);
                                        break;
                                    case statusDetails.Submitted:
                                        $('.imagePending').text(item.approvalCount || 0);
                                        break;

                                }
                            }
                        
                     
                        
                        $('.totalKaizens').text(result.totalKaizenList[0].totalKaizens || 0);
                        $('.driTotal').text(result.totalKaizenList[0].driTotal || 0);
                        $('.financeTotal').text(result.totalKaizenList[0].financeTotal || 0);
                        $('.ieTotal').text(result.totalKaizenList[0].ieTotal || 0);
                        $('.imageTotal').text(result.totalKaizenList[0].imagetotal || 0);
                        $('.totalApproved').text(result.totalKaizenList[0].totalApproved || 0);
                        $('.totalPending').text(result.totalKaizenList[0].totalPending || 0);
                        $('.totalRejected').text(result.totalKaizenList[0].totalRejected || 0);
                        $('.driPending').text(result.totalKaizenList[0].cardManagerPending || 0);
                        $('.driApproved').text(result.totalKaizenList[0].cardManagerApproved || 0);
                        $('.ieApproved').text(result.totalKaizenList[0].cardIEApproved || 0);
                        $('.imageApproved').text(result.totalKaizenList[0].cardImageApproved || 0);


                    }
                     else
                      {

                       }

                
                  },
                error: function (error) {
                }
               
            });
           
        });
        $('#btn_filter').click();
   });
</script>

