@model IEnumerable<Kaizen.Models.Theme.ThemeModel>

@{
    Layout = "SidebarLayout";
}

<link rel="stylesheet" href="~/assets/css/ThemeChanger.css" />
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mt-2">
                <div class="card-body p-3">
                    <div class="right-box-padding">
                        <div class="read-content">
                            <div class="row">
                                <div class="col">
                                    <p>Add Theme</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-5">
                                    <input id="theme" class="form-control" placeholder="Enter theme" />
                                </div>
                                <div class="col-5">
                                    <input id="AddThemeBtn" type="button" value="Update" class="btn btn-azure" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <div id="validationMessage" class="text-danger" style="display: none;">Please enter a theme.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="right-box-padding">
                        <div class="read-content">
                            <div class="row">
                                <div class="col">
                                    <p>Theme List</p>
                                </div>
                            </div>
                            <div class="form-group row p-3">
                                <div class="table-responsive mx-3" style="overflow-x: hidden">
                                    <table class="table table-bordered" dataTable no-footer">
                                        <thead>
                                            <tr>
                                                <th class="text-center" style="border-bottom: 1px solid black !important;">Id</th>
                                                <th class="text-center" style="border-bottom: 1px solid black !important;">Theme Name</th>
                                                <th class="text-center" style="border-bottom: 1px solid black !important;">Action</th>
                                            </tr>
                                        </thead>
                                        @foreach (var dat in Model)
                                        {
                                            <tbody>
                                                <tr class="border">
                                                    <td class="text-center align-middle" style="background-color: rgb(242, 242, 242);">
                                                        <p class="text-center">@Model.Count()</p>
                                                    </td>
                                                    <td class="align-middle" style="background-color: rgb(242, 242, 242);">
                                                        <div class="row justify-content-center">
                                                            <div class="text-center">@dat.Theme</div>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle" style="background-color: rgb(242, 242, 242);">
                                                        <div class="row justify-content-center">
                                                            <div>
                                                                <a id="DeleteFunction" class="btn btn-danger btn-sm DeleteDepartment mx-1">
                                                                    <i class="edit fas fa-trash"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#AddThemeBtn').click(function () {
            var theme = $('#theme').val().trim();
            if (theme) {
                $('#validationMessage').hide();
                console.log("THIS IS THE THEME: " + theme);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ThemeChanger", "Theme")',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        Theme: theme
                    }),
                    success: function (response) {
                        if (response == true) {
                            swal({
                                text: "Theme Updated successfully !!",
                                type: "success"
                            }).then(OK => {
                                location.reload();
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        swal('Unable to Update the Theme Details - Please Check the logs');
                        console.log('Error:', error);
                    }
                });
            } else {
                $('#validationMessage').show();
            }
        });
    });
</script>
