@model IEnumerable<Kaizen.Models.Theme.ThemeModel>

@{
    Layout = "SidebarLayout";
}

<link rel="stylesheet" href="~/assets/css/ThemeChanger.css" />

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mt-2">
                <div class="card-body p-3">
                    <div class="right-box-padding">
                        <div class="read-content">
                            <div class="row">
                                <div class="col">
                                    <p>Add Theme</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-5">
                                    <input id="theme" class="form-control" placeholder="Enter theme" />
                                </div>
                                <div class="col-5">
                                    <input id="AddThemeBtn" type="button" value="Update" class="btn btn-azure" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="right-box-padding">
                        <div class="read-content">
                            <div class="row">
                                <div class="col">
                                    <p>Theme List</p>
                                </div>
                            </div>
                            <div class="form-group row p-3">
                                <div class="table-responsive mx-3">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Id</th>
                                                <th class="text-center">Theme Name</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var dat in Model)
                                            {
                                                <tr>
                                                    <td class="text-center align-middle bg-light">
                                                        <p class="text-center">@Model.Count()</p>
                                                    </td>
                                                    <td class="align-middle bg-light">
                                                        <div class="row justify-content-center">
                                                            <div class="text-center">@dat.Theme</div>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle bg-light">
                                                        <div class="row justify-content-center">
                                                            <div>
                                                                <a id="DeleteFunction" class="btn btn-danger btn-sm DeleteDepartment mx-1">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#AddThemeBtn').click(function () {
            var theme = $('#theme').val().trim();
            if (theme) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ThemeChanger", "Theme")',
                    contentType: 'application/json',
                    data: JSON.stringify({ Theme: theme }),
                    success: function (response) {
                        if (response) {
                            swal({
                                text: "Theme Updated successfully !!",
                            }).then(() => {
                                location.reload();
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        swal({
                            text: "Unable to update the theme details. Please check the logs.",
                        });
                        console.error('Error:', error);
                    }
                });
            } else {
                swal({
                    text: "Please enter a theme.",
                    icon: "warning"
                });
            }
        });
    });
</script>
