@model IEnumerable<Kaizen.Models.AdminModel.BlockModel>

@{
    Layout = "SidebarLayout";
}
<link href="~/assets/css/costom/addblock.css" rel="stylesheet" />
<link href="~/assets/css/common/common.css" rel="stylesheet" />


<div class="container-fluid center">
    <div class="row p-2">
        <div class="col-md-12">
            <div class=" card p-3 mt-2 mb-2 cardsize" id="card-block">
                <div class="row">
                    
                </div>

                <div class="row">
                    <div class="col-8">
                        <label><strong>Block Name</strong><span class="mandatory">*</span></label>

                        <input class="form-control" id="BlockName" name="BlockName" />
                        <span id="BlockError" class="error-message"></span>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-azure" id="btnAdd">Add</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- table  -->
    <!-- table  -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div><h4 class="card-title">Block Total</h4><p class="responsemessage"></p></div>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Block Name</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.blockName</td>

                                <td class="text-center"><a><span class=" btn btn-success badge-sm bd">Active</span></a></td>
                                <td class="text-center"><a class="btn btn-danger   icon  deleteuser"><i class="fa-solid fa-trash-can"></i></a></td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


<script>

    function ValidateForm() {
        var isValid = true;

        // Remove red borders and error messages
        $("#BlockName").css("border-color", "red");
        $("#Blockerror").text("");
        $(".error-message").text("");

        // Check for empty or invalid fields
        var blockNameValue = $("#BlockName").val();

        if (blockNameValue === "") {
            $("#BlockName").css("border-color", "red");
            $("#BlockError").text("Block Name is required.");
            isValid = false;
        }
        if (!isValid) {
            $("#error-message").text("Please fill in the required field correctly.");
            // Add red border to the submit button
            $("#submitButton").css("border-color", "red");
        }
        return isValid;
    }

    $(document).ready(function () {
        $("#btnAdd").click(function () {

            var BlockName = $('#BlockName').val();

            if (!ValidateForm()) {
                // If validation fails, return or perform any other necessary actions
                return;
            }
            $.ajax({
                type: 'POST',
                url: '/Admin/AddBlock',
                dataType: "json",
                data: { blockName: BlockName },
                success: function (result) {
                    // Handle success (if needed)
                    var res = $.isEmptyObject(result);
                    if (res) {
                        swal('please Enter Block Name');
                    }
                    else {
                        swal('Block saved successfully!!');
                    }
                },
                error: function (error) {
                    // Handle errors (if needed)
                    // console.error('Error:', error);
                }
            });
        });
    });

</script>