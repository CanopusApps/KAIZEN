@{
    Layout = "SidebarLayout";
}
<div class="container p-4 border bg-white">
    <h4 class="text-center">Add User</h4>
    <div class="custom-line mb-3"></div>
    <form>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputName">Name<span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail">Email<span class="text-danger">*</span></label>
                <input type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPhone">Phone No<span class="text-danger">*</span></label>
                <input type="tel" class="form-control" placeholder="Phone Number">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputEmpID">Emp ID<span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="Employee ID">
            </div>
            <div class="form-group col-md-4">
                <label for="inputDepartment">Department<span class="text-danger">*</span></label>
                <select id="inputDepartment" class="form-control">
                    <option selected>All</option>
                    <!-- Add department options here -->
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputDomain">Domain<span class="text-danger">*</span></label>
                <select class="form-control">
                    <option selected>All</option>
                    <!-- Add domain options here -->
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputUserType">User Type<span class="text-danger">*</span></label>
                <select class="form-control">
                    <option selected>SUPERADMIN</option>
                    <!-- Add user type options here -->
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputStatus">Status<span class="text-danger">*</span></label>
                <select class="form-control">
                    <option selected>Active</option>
                    <!-- Add status options here -->
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputCadre">Cadre<span class="text-danger">*</span></label>
                <select class="form-control">
                    <option selected>Select</option>
                    <!-- Add cadre options here -->
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Gender<span class="text-danger">*</span></label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="genderOptions" value="Male">
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="genderOptions" value="Female">
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword">Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group col-md-4">
                <label for="inputConfirmPassword">Confirm Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="Confirm Password">
            </div>

        </div>
        <!-- <button type="submit" class="btn btn-primary">Add</button> -->
        <button type="submit" class="btn btn-block-custom btn-azure ">Add New User</button>
    </form>
</div>